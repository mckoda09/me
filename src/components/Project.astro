---
import { Icon } from "astro-icon/components";

const { title, description, github, technologies } = Astro.props;
---

<a href={github} target="_blank">
  <div
    class="h-full p-5 flex flex-col gap-3 justify-between rounded-xl border border-neutral-800 hover:-translate-y-1 transition-transform"
  >
    <div class="space-y-3">
      <div class="flex justify-between items-center">
        <div>{title}</div>
        <Icon name="tabler:arrow-up-right" class="text-neutral-500 text-xl" />
      </div>
      <div class="text-neutral-400">
        {description}
      </div>
    </div>
    <div class="flex text-sm text-neutral-500 gap-3">
      {technologies.map((t: string) => <div>{t}</div>)}
    </div>
  </div>
</a>
